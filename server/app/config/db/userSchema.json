{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "User",
  "description": "A WoWFinder User",
  "type": "object",
  "properties": {
    "id": {
      "type": "integer"
    },
    "battleTag": {
      "type": "string"
    },
    "accessToken": {
      "type": "string"
    },
    "email": {
      "type": "object",
      "properties": {
        "address": {
          "type": "string",
          "default":""
        },
        "services": {
          "type": "object",
          "properties": {
            "adsExpirationReminder": {
              "type": "boolean",
              "default":false
            }
          }
        }
      }
    }
  }
}